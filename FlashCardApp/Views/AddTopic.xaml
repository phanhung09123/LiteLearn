<Window x:Class="FlashCardApp.Views.AddTopic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Topic" Height="162" Width="300"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <StackPanel Margin="20">
        <TextBlock Text="Topic Title:" FontSize="14"/>
        <TextBox x:Name="TitleBox" Margin="0,5" FontSize="14"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="70" Margin="5,0" Click="OK_Click"/>
            <Button Content="Cancel" Width="70" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
